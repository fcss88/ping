# terraform.tfvars.example
# Copy this file to terraform.tfvars and customize the values
# Command: cp terraform.tfvars.example terraform.tfvars
# Note: terraform.tfvars should be added to .gitignore (don't commit passwords!)

# ============================================
# General Configuration
# ============================================
aws_region   = "us-east-1"
project_name = "webapp"
environment  = "dev"
owner        = "YourName"

# ============================================
# Networking Configuration
# ============================================
vpc_cidr               = "10.0.0.0/16"
availability_zones     = ["us-east-1a", "us-east-1b"]
public_subnet_cidrs    = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs   = ["10.0.11.0/24", "10.0.12.0/24"]
database_subnet_cidrs  = ["10.0.21.0/24", "10.0.22.0/24"]

# ============================================
# Compute Configuration
# ============================================
instance_type    = "t3.micro"
min_size         = 2
max_size         = 4
desired_capacity = 2

# ============================================
# Database Configuration
# ============================================
db_engine            = "mysql"
db_engine_version    = "8.0"
db_instance_class    = "db.t3.micro"
db_name              = "appdb"
db_username          = "admin"
db_password          = "ChangeMe123!" # CHANGE THIS! Use a strong password
db_allocated_storage = 20
db_multi_az          = false # Set to true for production

# ============================================
# Storage Configuration
# ============================================
enable_s3_versioning = true

# ============================================
# Monitoring Configuration
# ============================================
enable_detailed_monitoring = false
alarm_email                = "" # Add your email to receive alerts